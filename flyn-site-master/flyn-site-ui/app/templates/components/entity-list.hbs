<div class="widget-frame">
	<div class="widget-header">{{title}}</div>
	<div class="widget-body">
		<ul class="list-group">
		{{#each items as |item|}} 
			<li class="list-group-item list-group-item-action" {{action "itemSelected" item}}>{{item.name}}
		</li>
  			
		{{/each}}

		</ul>
				<button type="button" class="btn btn-secondary" {{action "newEntity"}}>
  				{{t "user.new"}} 
  			</button>
	</div>
</div>
{{yield}}
