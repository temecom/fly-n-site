<div class="card">
  <div class="card-header">
    <div class="btn-group collapsed pull-right ">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">{{t "user.close"}}</button>
      <button id="saveButton" class="btn btn-primary" {{on "click" this.save}} data-dismiss="modal">{{t
        "user.save"}}</button>
      {{#if this.site.map }}
      {{#if this.site.map.siteMarker}}
      <button id="newMarkerButton" class="btn btn-primary" {{on "click" (fn this.createMarker "LANDMARK" ) }}
        data-dismiss="modal">{{t "site.map.newMarker"}}</button>
      {{else}}

      <button id="newSiteMarkerButton" class="btn btn-primary" {{on "click" (fn this.createNewMarker "SITE" ) }}
        data-dismiss="modal">{{t "site.map.newSiteMarker"}}</button>
      {{/if}}
      {{else }}
      <button id="newMapButton" class="btn btn-primary" {{on "click" this.createNewMap}} data-dismiss="modal">{{t
        "site.map.newMap"}}</button>
      {{/if}}
    </div>
    <div class="pull-left blockquote">
      {{this.site.name}}
    </div>
  </div>
</div>
{{yield}}