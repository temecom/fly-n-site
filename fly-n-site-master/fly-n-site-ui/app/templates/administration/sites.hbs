{{entity-list items=model.sites title=(t "site.sites") itemSelected=(action 'siteSelected') newEntity=(action "newSite")}}


<!-- The site editor modal dialog -->

<div class="modal fade" id="siteModal" tabindex="-1" role="dialog"
	aria-labelledby="siteModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModal3Label">{{model.site.name}}</h5>
				<button type="button" class="close" data-dismiss="modal"
					aria-label={{t "forms.close"}}>
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form>
					{{bootstrap-input value=model.site.id placeholder=(t "forms.common.id") label=(t "forms.common.id")}}
					{{bootstrap-input value=model.site.name placeholder=(t "forms.common.name") label=(t "forms.common.name")}}
					{{bootstrap-input value=model.site.club placeholder=(t "forms.common.email") label=(t "forms.common.club")}}
				</form>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary"
							data-dismiss="modal">Close</button>
						<button id="saveButton" class="btn btn-primary"
							{{action "saveSite"}} data-dismiss="modal" >{{t "user.save"}}</button>
										<button id="addressButton" class="btn btn-secondary"
							{{action "showAddressModal"}} data-dismiss="modal" >{{t "forms.common.address.title"}}</button>
					</div>
	
			</div>
		</div>

	</div>
</div>
{{outlet}}
