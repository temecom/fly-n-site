{{entity-list items=model.clubs title=(t "site.clubs") itemSelected=(action 'clubSelected') newEntity=(action "newClub")}}

<!-- The club editor modal dialog -->

<div class="modal fade" id="clubModal" tabindex="-1" role="dialog"
	aria-labelledby="clubModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModal3Label">{{model.club.name}}</h5>
				<button type="button" class="close" data-dismiss="modal"
					aria-label={{t "forms.close"}}>
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form>
					{{bootstrap-input value=model.club.id placeholder=(t "forms.common.id") label=(t "forms.common.id")}}
					{{bootstrap-input value=model.club.name placeholder=(t "forms.common.name") label=(t "forms.common.name")}}
					{{bootstrap-input value=model.club.emailAddress placeholder=(t "forms.common.email") label=(t "forms.common.email")}}
					{{bootstrap-input value=model.club.webSiteUrl placeholder=(t "forms.common.webSiteUrl") label=(t "forms.common.webSiteUrl")}}
					{{bootstrap-input value=model.club.facebookPage placeholder=(t "forms.common.facebookPage") label=(t "forms.common.webSiteUrl")}}
				</form>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary"
							data-dismiss="modal">Close</button>
						<button id="saveButton" class="btn btn-primary"
							{{action "saveClub"}} data-dismiss="modal" >{{t "user.save"}}</button>
										<button id="addressButton" class="btn btn-secondary"
							{{action "showAddressModal"}} data-dismiss="modal" >{{t "forms.common.address.title"}}</button>
					</div>
	
			</div>
		</div>

	</div>
</div>

{{address-input address=model.club.postalAddress addressee=model.club.name countries=model.countries}}
