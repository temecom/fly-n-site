<!-- The person editor modal dialog -->
	<div class="card">
	<div class="card-header">
		<h5>{{model.person.name}}</h5>
			<div class="btn-group collapsed">
				<button type="button" class="btn btn-secondary"
					data-dismiss="modal">{{t "user.close"}}</button>
				<button id="saveButton"
					class="btn btn-primary"
					{{action "save"}} data-dismiss="modal" >{{t "user.save"}}</button>

			</div>
		</div>
	</div>
{{#bs-accordion selected="1" as |acc|}}
	{{#acc.item value="1" title=(t "forms.common.identity")}}
	<div class="card" id="personModal">
		<div class="card-body">{{#bs-form formLayout=formLayout
			model=model.person
			onSubmit=(action "save") as |form|}}
				{{form.element
					disabled=true
					property="id"
					placeholder=(t "forms.common.id")
					label=(t "forms.common.id")
				}}
				{{form.element
					property="givenName"
					placeholder=(t "forms.common.givenName")
					label=(t "forms.common.givenName")
				}}
				{{form.element
					property="surName"
					placeholder=(t "forms.common.surName")
					label=(t "forms.common.surName")
				}}
				{{form.element
					property="emailAddress"
					placeholder=(t "forms.common.email")
					label=(t "forms.common.email")
				}}
				{{form.element
					property="webSiteUrl"
					placeholder=(t "forms.common.webSiteUrl")
					label=(t "forms.common.webSiteUrl")
				}}
				{{form.element
					property="facebookPage"
					placeholder=(t "forms.common.facebookPage")
					label=(t "forms.common.webSiteUrl")
				}}
			{{/bs-form}}
		</div>

	</div>
	{{/acc.item}}
	{{#acc.item value="2" title=(t "forms.common.address.title")}}
	<div class="card">
			<div class="card-body">
			{{address-input
				address=model.person.postalAddress
				addressee=model.person.name
				countries=model.countries
				save=(action "saveAddress")
				}}

		</div>
	</div>
	{{/acc.item}}
	{{#acc.item value="3" title=(t "site.memberships")}}
			 {{entity-list
				 items=model.person.memberships
				 newEntity=(action "newMembership")
				 itemSelected = (action "membershipSelected")
			 }}
			 {{membership-editor membership=selectedMembership save=(action "saveMembership")}}
	{{/acc.item}}
{{/bs-accordion}}
<div class="card">
<div class="card-header">
		<div class="btn-group collapsed">
			<button type="button" class="btn btn-secondary"
				data-dismiss="modal">{{t "user.close"}}</button>
			<button id="saveButton"
				class="btn btn-primary"
				{{action "save"}} data-dismiss="modal" >{{t "user.save"}}</button>

		</div>
	</div>
</div>
			{{yield}}
